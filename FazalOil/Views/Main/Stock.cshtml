                listOfAllProducts = [];

                getProductName(function (arr) {
                    var products = $.parseJSON(arr);
                    dt.clear();
                    $.each(products, function (index, item) {
                        indices.push(item.ProductID);
                        productNamesList.push(item.ProductName);
                        listOfAllProducts.push(item);
                        var totalCapital = 0;
                        if (item.CategoryID == 1) {
                            totalCapital = item.PurchasingPrice * item.TotalCans;
                        }
                        else if (item.CategoryID == 2) {
                            totalCapital = item.PurchasingPrice * item.TotalLiters;
                        }
                        else {
                            totalCapital = item.PurchasingPrice * item.TotalQuantity;
                        }
                        totalStock = totalStock + totalCapital;
                        dt.row.add([
                            item.ProductID,
                            item.ProductName,
                            item.CanSize,
                            item.TotalCans,
                            Number(item.TotalLiters).toFixed(2),
                            item.TotalQuantity,
                            Number(item.PurchasingPrice).toFixed(2),
                            Number(totalCapital).toFixed(2),
                            (item.DropoffID == 1) ? 'Shop' : 'Depot',
                            '<div><p id="sp_id" style="display:none">' + item.SupplierID + '</p>' +
                            '<p id="df_id" style="display:none">' + item.DropoffID + '</p>' +
                            '<p id="bd_id" style="display:none">' + item.BrandID + '</p>' +
                            '<button type="button" data-toggle="modal" data-target="#myModal" class="btn btn-warning" style="'+(USER_TYPE == "ceo") ? '' : 'display:none'+'" onclick="updateModal(' + item.ProductID + ')"><span class="glyphicon glyphicon-edit"></span>&nbspEdit</button>' +
                            '<p id="cat_id" style="display:none">' + item.CategoryID + '</p></div>'
                        ]).draw();
                        //$("#listOfProducts").append('<tr id="tr' + item.ProductID + '" class="odd gradeX"><td>' + item.ProductName + '</td><td>' + ((item.TotalQuantity == null) ? 'N/A' : item.TotalQuantity) + '</td><td>' + ((item.TotalLiters == null) ? 'N/A' : item.TotalLiters) + '</td><td>' + ((item.TotalCans == null) ? 'N/A' : item.TotalCans) + '</td><td class="center">' + item.DateOfPurchase + '</td><td class="center">' + item.PurchasingPrice + '</td><td class="center"><button type="button" data-toggle="modal" data-target="#myModal" class="btn btn-warning" onclick="updateModal(\'tr' + item.ProductID + '\')"><span class="glyphicon glyphicon-edit"></span>&nbspEdit</button></td><td id="pid" style="display:none">' + item.ProductID + '</td><td style="display:none">' + item.CategoryID + '</td></tr>');
                    });
                    autocomplete(document.getElementById("txtProductName"), productNamesList);
                    $('#totalCapital').val(Number(totalStock).toFixed(2));
                });

                SHOULD_LOAD = false;
            }

            
        });

        function updateModal(pid) {

            $("#btnSubmit").text('Update');

            var row = null;

            $.each(listOfAllProducts, function (index, item) {
                if (item.ProductID == pid) {
                    row = item;
                }
            });

            $("#modal_pid").html(row.ProductID);
            $("#txtProductName").val(row.ProductName);
            $("#txtCanSize").val(row.CanSize);
            $("#txtNoOfCans").val(row.TotalCans);
            $("#txtNoOfLitres").val(row.TotalLiters);
            $("#txtQuantity").val(row.TotalQuantity);
            $("#txtPrice").val(row.PurchasingPrice);
            $("#datePurchase").val(row.DateOfPurchase);

            $('#selectLocation option[value=' + row.DropoffID + ']').prop("selected", true);
            $('#selectSupplier option[value=' + row.SupplierID + ']').prop("selected", true);
            $('#selectCategory option[value=' + row.CategoryID + ']').prop("selected", true);
            $('#selectBrand option[value=' + row.BrandID + ']').prop("selected", true);

            categories();
            totalPrice();
            
        }

    </script>

        
