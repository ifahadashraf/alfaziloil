                <div class="page-header">
                    <h1>Daily Expenses</h1>
                </div>
                <div class="row">

                </div>
            </div>

            <div class="row">

                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Date</label>
                        <input id="dtPicker" type="date" class="form-control" data-date-inline-picker="true">
                    </div>
                </div>

                    <div class="col-lg-7"></div>
                    <div class="col-lg-2" style="text-align:right;margin-top:25px">
                      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-plus"></span>&nbsp Add Expense</button>
                    </div>

            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Total Expenses
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table id="expenseTable" width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Sr#</th>
                                        <th>Name of Person</th>
                                        <th>Purpose</th>
                                        <th>Amount</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                            </table>

                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div id="myModal" class="modal fade" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Expenses</h4>
                        </div>
                        <div class="modal-body">
                            <div id="alertdiv" class="row">
                            </div>
                            <div class="row">
                                <div class="col-lg-12">

                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Date</label>
                                                <input id="datePurchase" type="date" class="form-control" data-date-inline-picker="true">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Amount:</label>
                                                <input type="number" id="txtAmount" class="form-control" placeholder="Enter Amount">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Person:</label>
                                                <input  id="txtPerson"  class="form-control" placeholder="Person Name">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div  class="form-group">
                                                <label>Purpose:</label>
                                                <input id="txtPurpose" class="form-control" placeholder="Purpose" >
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="row">
                                <div class="col-lg-2">
                                    <button id="btnSubmit" onclick="saveExpense()" class="btn btn-outline btn-primary col-lg-12">Save</button>
                                </div>
                                <div class="col-lg-2">
                                    <button id="btnClear" type="reset" class="btn btn-outline btn-danger col-lg-12">Clear</button>
                                </div>
                            </div>
                        </div>
                    </div>

